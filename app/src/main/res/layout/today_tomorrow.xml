<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tomorrowWrapper" >

    <TextView
        android:id="@+id/tomorrowHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Tomorrow"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="19dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/beginTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tomorrowHeadline"
        android:layout_marginTop="5dp"
        android:text="Begin: 09:00"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tomorrowEmptyLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/beginTime"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tomorrowSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tomorrowEmptyLine"
        android:text="Digitaltechnik,\nProgrammieren 1,\nMarketing,\nProjektmanagement"
        android:textSize="14dp" />
</RelativeLayout>