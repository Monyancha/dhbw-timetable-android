<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/Changes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Changes"
            android:paddingTop="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/NotCritText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Changes"
            android:paddingBottom="5dp"
            android:paddingTop="15dp"
            android:text="Notification on"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/NotCritValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/NotCritText"
            android:layout_alignBottom="@+id/NotCritText"
            android:layout_alignParentEnd="true"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="15dp"
            android:text="Every change"
            android:textAlignment="viewEnd"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/FormText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/NotCritText"
            android:paddingBottom="5dp"
            android:paddingTop="15dp"
            android:text="Form"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/FormValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="15dp"
            android:text="Banner"
            android:textAlignment="viewEnd"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_below="@+id/NotCritText"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/ToneText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/FormText"
            android:paddingBottom="5dp"
            android:paddingTop="15dp"
            android:text="Tone"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/ToneValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="15dp"
            android:text="Blub"
            android:textAlignment="viewEnd"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_below="@+id/FormText"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</ScrollView>