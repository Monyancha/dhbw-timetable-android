<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:clickable="false"
    android:orientation="vertical">
    <TextView
        android:id="@+id/courseTime"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="08:00"
        android:textAppearance="@style/AgendaTime"
        android:textSize="16sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/courseTitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/courseTime"
        android:background="@drawable/course_background"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Logik und Grundlagen"
        android:textAppearance="@style/CourseText" />
</RelativeLayout>